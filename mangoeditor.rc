#include <windows.h>
#include <winver.h>

// =============================================
// MangoEditor Windows Resource File
// =============================================

// ----------------------------
// আইকন রিসোর্স (Icon Resources)
// ----------------------------
#define IDI_MAIN_ICON         101
#define IDI_SMALL_ICON        102

// প্রধান আইকন (256x256 with multiple resolutions)
IDI_MAIN_ICON ICON DISCARDABLE "resources/icons/win/app_icon.ico"

// টাস্কবার/উইন্ডো আইকন (32x32)
IDI_SMALL_ICON ICON DISCARDABLE "resources/icons/win/small_icon.ico"

// ----------------------------
// ভার্সন ইনফরমেশন (Version Info)
// ----------------------------
VS_VERSION_INFO VERSIONINFO
FILEVERSION     2,0,0,0       // অ্যাপ ভার্সন (Major.Minor.Patch.Build)
PRODUCTVERSION  2,0,0,0
FILEFLAGSMASK   VS_FFI_FILEFLAGSMASK
FILEFLAGS       0x0L
FILEOS          VOS__WINDOWS32
FILETYPE        VFT_APP
FILESUBTYPE     VFT2_UNKNOWN

BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "040904b0"  // ইংরেজি (যুক্তরাষ্ট্র) + ইউনিকোড
        BEGIN
            VALUE "CompanyName",      "MangoSoft\0"
            VALUE "FileDescription",  "MangoEditor - আধুনিক কোড এডিটর\0"
            VALUE "FileVersion",      "2.0.0.0\0"
            VALUE "InternalName",     "mangoeditor\0"
            VALUE "LegalCopyright",   "কপিরাইট © 2023-2024 MangoSoft. সর্বস্বত্ব সংরক্ষিত\0"
            VALUE "OriginalFilename", "mangoeditor.exe\0"
            VALUE "ProductName",     "MangoEditor\0"
            VALUE "ProductVersion",  "2.0.0\0"
            VALUE "BuildDate",      __DATE__ "\0"  // অটো বিল্ড ডেট
        END
    END

    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x0409, 1200  // ইংরেজি (US) + ইউনিকোড
    END
END

// ----------------------------
// ম্যানিফেস্ট (Compatibility)
// ----------------------------
#define RT_MANIFEST 24
#define IDR_MANIFEST 1

IDR_MANIFEST RT_MANIFEST MOVEABLE PURE
BEGIN
    "<?xml version='1.0' encoding='UTF-8' standalone='yes'?>"
    "<assembly xmlns='urn:schemas-microsoft-com:asm.v1' manifestVersion='1.0'>"
    "  <trustInfo xmlns='urn:schemas-microsoft-com:asm.v3'>"
    "    <security>"
    "      <requestedPrivileges>"
    "        <requestedExecutionLevel level='asInvoker' uiAccess='false'/>"
    "      </requestedPrivileges>"
    "    </security>"
    "  </trustInfo>"
    "  <compatibility xmlns='urn:schemas-microsoft-com:compatibility.v1'>"
    "    <application>"
    "      <supportedOS Id='{8e0f7a12-bfb3-4fe8-b9a5-48fd50a15a9a}'/>"  // Win10+
    "    </application>"
    "  </compatibility>"
    "  <dpiAwareness>PerMonitorV2</dpiAwareness>"
    "  <dpiAware>true</dpiAware>"
    "</assembly>"
END

// ----------------------------
// ডায়ালগ বক্স রিসোর্স 
// ----------------------------
#define IDD_ABOUT_BOX 200

IDD_ABOUT_BOX DIALOGEX 0, 0, 300, 200
STYLE DS_SHELLFONT | WS_POPUP | WS_CAPTION | WS_SYSMENU
CAPTION "MangoEditor সম্পর্কে"
FONT 9, "Segoe UI", 400, 0
BEGIN
    LTEXT   "MangoEditor 2.0\n\nএকটি আধুনিক কোড এডিটর\n\nকপিরাইট © 2023-2024 MangoSoft", -1, 20, 20, 260, 100
    DEFPUSHBUTTON "ঠিক আছে", IDOK, 110, 150, 80, 24
END
